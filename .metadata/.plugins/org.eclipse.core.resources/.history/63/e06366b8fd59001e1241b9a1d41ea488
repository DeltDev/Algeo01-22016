package LinearAlgebra;
import LinearAlgebra.*;
public class Echelon {
	
	public static Matrix REF(Matrix m) {
		int n = m.row;
		Matrix m1 = new Matrix(n,n);
		double ratio,temp;
		int swapcount;
		swapcount = 0;
		for(int i = 0; i<n; i++) {//copy matrix m ke m1 lokal
			for(int j = 0; j<n; j++) {
				m1.Mat[i][j] = m.Mat[i][j];
			}
		}
		for(int i = 0; i<n-1; i++) { //ubah matrix m jadi matrix segitiga Atas
			for(int j = n-1; j>i; j--) {
				if(m1.Mat[j][i] == 0) {
					continue;
				} else {
					if(m1.Mat[j-1][i] == 0) {
						m1.swapRow(j,j-1);
						swapcount++;
						continue;
					}
						
					ratio = m1.Mat[j][i] / m1.Mat[j-1][i];
					for(int l = 0; l<n; l++) {
						m1.Mat[j][l] = m1.Mat[j][l] - ratio * m1.Mat[j-1][l];
					}
				}
			}
		}
		
		return m1;
	}
}
