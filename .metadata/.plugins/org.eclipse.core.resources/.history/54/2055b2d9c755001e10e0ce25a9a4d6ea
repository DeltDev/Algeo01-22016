package LinearAlgebra;
import LinearAlgebra.Matrix;
public class MatrixOperations {
	public Matrix Transpose(Matrix m)
	{
		int i,j;
		double swap;
		Matrix ret;
		ret = new Matrix(m.col,m.row);
		for(i=0;i<m.row;i++)
		{
			for (j=0;j<m.col;j++)
			{
				ret.Mat[i][j] = m.Mat[j][i];
			}
		}
		return ret;
	}

	public void plus(Matrix m1, Matrix m2)
	{
		int i,j;
		for(i=0;i<m1.row;i++)
			for(j=0;j<m1.col;j++)
			{
				m1.Mat[i][j] += m2.Mat[i][j]; // Penambahan ada di m1
			}
	}

	public void minus(Matrix m1, Matrix m2)
	{
		int i,j;
		for(i=0;i<m1.row;i++)
			for(j=0;j<m1.col;j++)
			{
				m1.Mat[i][j] -= m2.Mat[i][j]; // Pengurangan ada di m1
			}
	}
}
